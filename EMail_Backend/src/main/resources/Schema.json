{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "User",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the user"
      },
      "userName": {
        "type": "string",
        "description": "Username of the user",
        "minLength": 1
      },
      "password": {
        "type": "string",
        "description": "Password of the user",
        "minLength": 1
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Email address of the user"
      },
      "contacts": {
        "type": "object",
        "description": "Contacts information",
        "properties": {
          "contacts": {
            "type": "array",
            "items": { "$ref": "#/definitions/Contact" },
            "description": "List of contacts"
          },
          "sortedContacts": {
            "type": "array",
            "items": { "$ref": "#/definitions/Contact" },
            "description": "Sorted list of contacts"
          }
        },
        "required": ["contacts"]
      },
      "mailFolders": {
        "type": "object",
        "description": "Mail folders of the user",
        "properties": {
          "inboxFolder": {
            "type": "array",
            "items": { "$ref": "#/definitions/Mail" },
            "description": "Mails in the inbox folder"
          },
          "sentFolder": {
            "type": "array",
            "items": { "$ref": "#/definitions/Mail" },
            "description": "Mails in the sent folder"
          },
          "draftFolder": {
            "type": "array",
            "items": { "$ref": "#/definitions/Mail" },
            "description": "Mails in the draft folder"
          },
          "trashFolder": {
            "type": "array",
            "items": { "$ref": "#/definitions/Mail" },
            "description": "Mails in the trash folder"
          },
          "UserFolders": {
            "type": "object",
            "description": "Custom user folders",
            "additionalProperties": {
              "type": "array",
              "items": { "$ref": "#/definitions/Mail" }
            }
          },
          "sortedMails": {
            "type": "array",
            "items": { "$ref": "#/definitions/Mail" },
            "description": "Sorted list of mails"
          }
        },
        "required": ["inboxFolder", "sentFolder", "draftFolder", "trashFolder"]
      }
    },
    "required": ["userName", "password", "email", "contacts", "mailFolders"],
    "additionalProperties": false,
    "definitions": {
      "Contact": {
        "type": "object",
        "properties": {
          "ID": { "type": "string", "description": "Unique identifier for the contact" },
          "Name": { "type": "string", "description": "Name of the contact" },
          "Emails": {
            "type": "array",
            "items": { "type": "string", "format": "email" },
            "description": "List of email addresses for the contact"
          }
        },
        "required": ["ID", "Name"]
      },
      "Mail": {
        "type": "object",
        "properties": {
          "subject": { "type": "string", "description": "Subject of the mail" },
          "priority": {
            "type": "integer",
            "description": "Priority of the mail (e.g., 1 for high priority)"
          },
          "body": { "type": "string", "description": "Body content of the mail" },
          "sender": { "type": "string", "format": "email", "description": "Sender of the mail" },
          "recipients": {
            "type": "array",
            "items": { "type": "string", "format": "email" },
            "description": "List of recipients of the mail"
          },
          "date": { "type": "string", "format": "date-time", "description": "Date of the mail" },
          "folderBeforeDelete": {
            "type": "string",
            "description": "Folder from which the mail was deleted"
          },
          "deletedDate": {
            "type": "string",
            "format": "date-time",
            "description": "Date when the mail was deleted"
          },
          "attachments": {
            "type": "array",
            "items": { "type": "string", "description": "File path or name of the attachment" },
            "description": "List of attachments in the mail"
          }
        },
        "required": ["subject", "priority", "body", "sender", "recipients", "date"]
      }
    }
  }
  